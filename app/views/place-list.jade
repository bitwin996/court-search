.controller(ng-controller="PlaceListCtrl")

  accordion(class-others="oneAtTime")
    accordion-group(ng-repeat="place in data.places", heading="{{ place.name }}")
      dl(ng-click="selectPlace(place)")
        dt Latitude
        dd {{ place.latitude }}
        dt Longitude
        dd {{ place.longitude }}
        dt Address
        dd {{ place.address }}
        dt Phone
        dd {{ place.phone }}

  #map-canvas.span8

